# LLM API Keys Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key (free tier available)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# Groq API Key (recommended - fast & free tier)
# Get from: https://console.groq.com
GROQ_API_KEY=

# LLM Provider Selection
# Options: "openai", "gemini", "groq", "ollama"
LLM_PROVIDER=groq

# Optional: Specific model to use (leave empty to use defaults)
# OpenAI: gpt-3.5-turbo, gpt-4
# Gemini: gemini-pro, gemini-1.5-flash
# Groq: mixtral-8x7b-32768, llama2-70b-4096, llama-2-13b-chat
LLM_MODEL=

# Flask Configuration
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Video Processing
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
MAX_VIDEO_SIZE_MB=1000

# Anomaly Detection Thresholds
ALERT_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.5

# Tracking Parameters
MAX_TRACKING_DISTANCE=50
MAX_FRAMES_TO_SKIP=5

# Analysis Parameters
POSE_HISTORY_LENGTH=60
APPEARANCE_HISTORY_LENGTH=100
CROWD_HISTORY_LENGTH=60
